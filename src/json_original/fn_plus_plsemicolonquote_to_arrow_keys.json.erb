{
    "title": "Change fn + p/l/;/' to arrow keys",
    "rules": [
        {
            "description": "Change fn + p/l/;/' to arrow keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("p", ["fn"], ["any"]) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ["fn"], ["any"]) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("semicolon", ["fn"], ["any"]) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("quote", ["fn"], ["any"]) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        }
    ]
}
