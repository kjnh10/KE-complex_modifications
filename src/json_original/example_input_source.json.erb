{
    "title": "input_source_if,input_source_unless example",
    "rules": [
        {
            "description": "Toggle input sources (English or Japanese) by grave_accent_and_tilde",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": <%= from("grave_accent_and_tilde", [], ["caps_lock"]) %>,
                    "to": <%= to([["japanese_eisuu"]]) %>
                },
                {
                    "conditions": [
                        {
                            "type": "input_source_unless",
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": <%= from("grave_accent_and_tilde", [], ["caps_lock"]) %>,
                    "to": <%= to([["japanese_kana"]]) %>
                }
            ]
        }
    ]
}
