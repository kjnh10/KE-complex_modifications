                {
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "ru"
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": <%= from("grave_accent_and_tilde", [], ["any"]) %>,
                    "to": <%= to([["non_us_backslash"]]) %>
                }
            ]
        }
    ]
}
