{
    "title": "Czech PC-Style Shortcuts (AltGr+V -> '@', AltGr+Q -> '\\', AltGr+B -> '{', AltGr+N -> '}' etc...)",
    "rules": [
        {
            "description": "AltGr+1 -> '~'",
            "manipulators": [
                {
                    "from": <%= from("1", ["right_option"], ["any"]) %>,
                    "to": <%= to([["5", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
