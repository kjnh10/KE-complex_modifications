{
    "title": "keyboard_type_if, keyboard_type_unless example",
    "rules": [
        {
            "description": "Change control-[ to escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("open_bracket", ["control"], ["caps_lock"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "conditions": [
                        {
                            "type": "keyboard_type_if",
                            "keyboard_types": [
                                "ansi",
                                "iso"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("close_bracket", ["control"], ["caps_lock"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "conditions": [
                        {
                            "type": "keyboard_type_if",
                            "keyboard_types": [
                                "jis"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Change escape to mission_control if keyboard_type != ansi",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("escape", [], ["any"]) %>,
                    "to": <%= to([["mission_control"]]) %>,
                    "conditions": [
                        {
                            "type": "keyboard_type_unless",
                            "keyboard_types": [
                                "ansi"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
