{
    "title": "Mouse keys (simple) (rev 1)",
    "rules": [
        {
            "description": "Mouse keys (simple) (rev 1)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("w", ["right_shift"], ["any"]) %>,
                    "to": [ { "mouse_key": { "y": -1536 } } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("a", ["right_shift"], ["any"]) %>,
                    "to": [ { "mouse_key": { "x": -1536 } } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("s", ["right_shift"], ["any"]) %>,
                    "to": [ { "mouse_key": { "y": 1536 } } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("d", ["right_shift"], ["any"]) %>,
                    "to": [ { "mouse_key": { "x": 1536 } } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("r", ["right_shift"], ["any"]) %>,
                    "to": [ { "mouse_key": { "vertical_wheel": -32 } } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("v", ["right_shift"], ["any"]) %>,
                    "to": [ { "mouse_key": { "vertical_wheel": 32 } } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f", ["right_shift"], ["any"]) %>,
                    "to": [ { "pointing_button": "button1" } ]
                },
                {
                    "type": "basic",
                    "from": <%= from("g", ["right_shift"], ["any"]) %>,
                    "to": [ { "pointing_button": "button2" } ]
                }
            ]
        }
    ]
}
